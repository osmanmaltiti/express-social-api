generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "windows", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @unique
  fullname String
  username String @unique
  email String @unique
  age Int
  password String
  bio String
  createdAt DateTime @default(now())
  posts Post[]

  @@id([id, username, fullname])
}

model Post {
  id String @unique @id
  user User @relation(fields: [userId, userName, fullName], references: [id, username, fullname])
  post String
  createdAt DateTime @default(now())
  userId String
  fullName String
  userName String
  comments Comment[]
  
  @@unique([userId, userName, fullName])
}

model Comment {
  id Int @id @unique @default(autoincrement())
  post Post @relation(fields: [postId], references: [id])
  createdAt DateTime @default(now())
  postId String
  userId String
  comment String
}